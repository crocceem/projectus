<%provide(:title,"Assignements user")%>
<h1>Show affectations :</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Student</th>
          <th>Role</th>
          <th>Project</th>
          <th>Active</th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @user.assignements.each do |assignement|%>
            <tr>
              <th><%=assignement.user.name%></th>
              <th><%=assignement.role.role%></th>
              <th><%=assignement.project.name%></th>
              <th><% if assignement.active%>
                    <span class="glyphicon glyphicon-ok"></span>
                <% else %>
                    <span class="glyphicon glyphicon-remove"></span>
                <%end%>
              </th>
              <th>
                <%= form_for(assignement) do |f|%>
                <% if !assignement.active%>
                    <%=button_tag "Active", class:'btn btn-primary' %>
                <%end%>
              </th>
              <th><%=button_to "Delete",{},class:'btn btn-danger'%></th>
              <%end%>
            </tr>
        <%end%>

        </tbody>
      </table>
    </div>


  </div>
</div>